# NOVATEK Contract Manager - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ============================================
# APPLICATION
# ============================================
NEXT_PUBLIC_APP_NAME=NOVATEK Contract Manager
NEXT_PUBLIC_APP_URL=http://localhost:5000

# ============================================
# DATABASE
# ============================================
# PostgreSQL connection string
DATABASE_URL=postgresql://username:password@localhost:5432/contract_manager
DATABASE_POOL_SIZE=20

# Alternative: MongoDB
# MONGODB_URI=mongodb://localhost:27017/contract_manager

# ============================================
# ANTHROPIC CLAUDE API
# ============================================
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_claude_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4096

# ============================================
# AUTHENTICATION
# ============================================
# NextAuth.js configuration
NEXTAUTH_URL=http://localhost:5000
NEXTAUTH_SECRET=generate_with_openssl_rand_base64_32

# JWT configuration
JWT_SECRET=generate_with_openssl_rand_base64_32
JWT_EXPIRATION=7d

# ============================================
# FILE STORAGE (AWS S3)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=novatek-contracts
AWS_REGION=us-east-1

# Alternative: Google Cloud Storage
# GCS_PROJECT_ID=your_project_id
# GCS_BUCKET_NAME=novatek-contracts
# GCS_CREDENTIALS_PATH=./gcs-credentials.json

# Alternative: Cloudinary
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret

# ============================================
# EMAIL SERVICE
# ============================================
# SMTP configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@novatek.com
SMTP_PASSWORD=your_email_password
SMTP_FROM_NAME=NOVATEK Contract Manager
SMTP_FROM_EMAIL=noreply@novatek.com

# Alternative: SendGrid
# SENDGRID_API_KEY=your_sendgrid_api_key

# Alternative: AWS SES
# AWS_SES_REGION=us-east-1

# ============================================
# INTEGRATIONS (Optional)
# ============================================

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_NOTIFICATIONS_CHANNEL=#contracts

# Microsoft 365 Integration
MICROSOFT_CLIENT_ID=your_client_id
MICROSOFT_CLIENT_SECRET=your_client_secret
MICROSOFT_TENANT_ID=your_tenant_id

# DocuSign Integration
DOCUSIGN_INTEGRATION_KEY=your_integration_key
DOCUSIGN_USER_ID=your_user_id
DOCUSIGN_ACCOUNT_ID=your_account_id
DOCUSIGN_PRIVATE_KEY_PATH=./docusign-private.key

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_AI_ANALYSIS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_INTEGRATIONS=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_FILE_UPLOAD=true

# ============================================
# SECURITY & COMPLIANCE
# ============================================

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Session Configuration
SESSION_TIMEOUT=3600000
SESSION_COOKIE_SECURE=false

# ============================================
# LOGGING & MONITORING
# ============================================

# Log Level: error, warn, info, debug
LOG_LEVEL=info

# Sentry (Error Tracking)
# SENTRY_DSN=your_sentry_dsn
# SENTRY_ENVIRONMENT=development

# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# DEVELOPMENT
# ============================================
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# ============================================
# NOTES
# ============================================
# 1. Never commit .env.local to version control
# 2. Generate secrets using: openssl rand -base64 32
# 3. Update production values in your hosting provider
# 4. Keep this file updated when adding new variables
